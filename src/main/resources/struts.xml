<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />
	<!--  Setting the action extension to "" causes issues with css/js as Struts will try to serve these as actions -->
	<constant name="struts.action.extension" value="," />

	<package name="shoppinglist" namespace="/" extends="struts-default">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<interceptors>
			<interceptor-stack name="appDefaultStack">
				<interceptor-ref name="defaultStack">
					<param name="exception.logEnabled">true</param>
					<param name="exception.logLevel">ERROR</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="appDefaultStack" />

		<global-results>
			<result name="error">/error.jsp</result>
			<result name="securityerror">/securityerror.jsp</result>
		</global-results>


		<global-exception-mappings>
			<exception-mapping exception="org.apache.struts.register.exceptions.SecurityBreachException" result="securityerror" />
			<exception-mapping exception="java.lang.Exception" result="error" />
		</global-exception-mappings>

		<action name="index" class="fr.johanet.shoppinglist.action.IndexAction">
			<result>/thankyou.jsp</result>
		</action>


		<action name="register" class="fr.johanet.shoppinglist.action.Register" method="execute">
			<result name="success">/thankyou.jsp</result>
			<result name="input">/register.jsp</result>
		</action>

		<action name="editInfo" class="fr.johanet.shoppinglist.action.EditInfoAction" method="execute">
			<result name="success">/edit.jsp</result>
		</action>

		<action name="registerInput" class="fr.johanet.shoppinglist.action.Register" method="input">
			<result name="input">/register.jsp</result>
		</action>

		<action name="actionspecificexception" class="fr.johanet.shoppinglist.action.Register" method="throwSecurityException">
			<exception-mapping exception="fr.johanet.shoppinglist.exceptions.SecurityBreachException" result="login" />
			<result>/register.jsp</result>
			<result name="login">/login.jsp</result>
		</action>


	</package>
	<include file="struts/struts-home.xml"></include>
</struts>