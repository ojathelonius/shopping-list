<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />

	<package name="shoppinglist" extends="struts-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="hello" class="fr.johanet.shoppinglist.action.HelloWorldAction"
			method="execute">
			<result name="success">/HelloWorld.jsp</result>
		</action>

		<action name="register" class="fr.johanet.shoppinglist.action.Register"
			method="execute">
			<result name="success">/thankyou.jsp</result>
			<result name="input">/register.jsp</result>
		</action>

		<action name="registerInput" class="fr.johanet.shoppinglist.action.Register"
			method="input">
			<result name="input">/register.jsp</result>
		</action>

	</package>

</struts>