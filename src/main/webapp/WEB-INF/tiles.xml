<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

<!--  Cascade parameter makes the value available to nested classes -->
	<definition name="default" template="/WEB-INF/tiles/default.jsp">
		<put-attribute name="title" value="Home" type="string" cascade="true"/>
		<put-attribute name="header" value="/WEB-INF/tiles/template/header.jsp" />
		<put-attribute name="head" value="/WEB-INF/tiles/template/head.jsp" />
		<put-attribute name="body" value="/WEB-INF/tiles/template/body.jsp" />

		<!-- CSS -->
		<put-list-attribute name="cssList" cascade="true">
			<add-attribute value="/css/lib/bootstrap.min.css" />
		</put-list-attribute>

		<!-- JS -->
		<put-list-attribute name="jsList" cascade="true">
			<add-attribute value="/js/lib/bootstrap.min.js" />
		</put-list-attribute>
	</definition>

	<definition name="error" extends="default">
		<put-attribute name="body" value="/WEB-INF/tiles/template/error.jsp" />
	</definition>

</tiles-definitions>